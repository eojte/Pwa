{
  "name": "Down Stream",
  "short_name": "Stream",
  "start_url": "/Pwa/index.html?fullscreen=true",
  "scope": "./",
  "display": "fullscreen",
  "display_override": [
    "window-controls-overlay",
    "fullscreen",
    "standalone"
  ],
  "background_color": "#ffffff",
  "theme_color": "#0f172a",
  "orientation": "portrait",
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "lang": "en",
  "dir": "auto",
  "categories": [
    "games"
  ],
  "prefer_related_applications": false,
  "description": "A small fun arcade-indie game",
  "app_id": "com.ethan.downstream",  // Unique app ID
  "launch_handler": {
    "client_mode": "standalone"
  },
  "screenshots": [
    {
      "src": "/Pwa/sc1.png",  // Path to screenshot 1
      "sizes": "360x640",  // Adjust the size based on your screenshot
      "type": "image/png"
    },
    {
      "src": "/Pwa/screenshot2.png",  // Path to screenshot 2
      "sizes": "360x640",  // Adjust the size based on your screenshot
      "type": "image/png"
    }
  ]
